@using Newtonsoft.Json;
@using RewardSystemWeb.Models;
@model List<RewardSystemWeb.Models.AgentManager>

@{
    ViewBag.Title = "List of Agent Managers Institutions";
    var currentUser = JsonConvert.DeserializeObject<CurrentUser>((string)Session["currentUser"]);
    var inputter = (currentUser.Role == 1);
    var authoriser = (currentUser.Role == 3);
}





<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title_2">
            <h4><i class="icon-credit-card position-left"></i> <span class="text-semibold">Agent Managers Institutions</span></h4>
        </div>
    </div>
   
    @if (TempData.Peek("message") != null)
    {
        <div class="breadcrumb-line ">
            <ul class="breadcrumb">
                <li><a href="#"><i class="icon-notification2 position-left text-success-800"></i> </a></li>
                <li class="active alert-success" style="font-size: initial;">@Convert.ToString(TempData["message"])</li>
            </ul>
        </div>
    }
    else if (TempData.Peek("error") != null)
    {
        <div class="breadcrumb-line ">
            <ul class="breadcrumb">
                <li><a href="#"><i class="icon-notification2 position-left text-danger-800"></i> </a></li>
                <li class="active alert-error" style="font-size: initial;">@Convert.ToString(TempData["error"])</li>
            </ul>
        </div>
    }
</div>
<!-- /page header -->
<!-- Content area -->
<div class="page-container">
    <div class="content">




        




 
        <div class="row-fluid">
            <div class="span12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-edit"></i> @ViewBag.Title</div>
                        <div class="tools">

                        </div>
                    </div>
                    <div class="portlet-body" style=" overflow :auto">
                        <div class="clearfix">

                            @if (inputter)
                            {
                                <div class="btn-group">
                                    <a href="@Url.Action("NewItem", "AgentManager")" id="sample_editable_1_new" class="btn green">
                                        Add New <i class="icon-plus"></i>
                                    </a>

                                </div>
                            }

                            
                        </div>
                        <table class="table table-striped table-bordered table-hover" id="sample_67">
                            <thead>
                                <tr>

                                    <th> S/N</th>
                                    <th> Agent Manager Institution Name</th>
                                    <th> Agent Manager Institution Code</th>
                                    <th> </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                <tr>
                                    <td>@i.Id</td>
                                    <td>@i.AgentManagerName</td>
                                    <td>@i.AgentManagerCode</td>
                                    <td><a class="edit" href="@Url.Action("NewItem","AgentManager", new {id= i.Id})">Edit</a></td>



                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>


    </div>

</div>

<!-- END PAGE LEVEL PLUGINS -->